---
import Layout from '../layouts/Layout.astro';
import '../styles/global.css';	
import Hero from '../components/Hero.svelte';
import Hero2 from '../components/Hero2.svelte';
import Hero3 from '../components/Hero3.svelte';
import Hero6 from '../components/Hero6.svelte';
import ScrollVideoPlayer from '../components/React';
import ImageVideoPlayer from '../components/React2';
import React3 from '../components/React3';
import Bento from '../components/Bento.svelte';
import BentoPortfolio from '../components/BentoReact.tsx';
import PortfolioSite from '../components/PortfolioSite';



// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout>
  <script is:inline>
    document.body.style.overflow = 'hidden';
    document.body.style.height = '100vh';
  </script> 

<Hero client:only="svelte" >
    <Hero2 client:idle />
    <Hero3 client:idle />
    <Hero6 client:idle />
    
  </Hero> 
  <!-- <Hero6 client:idle /> -->

  <!-- <Hero3 client:load /> -->
   <div class="bg-[#100c08] min-h-screen p-4">
        <footer class="rounded-3xl text-white w-full h-[calc(100vh-2rem)] flex flex-col md:flex-row items-center justify-between p-8 md:px-16" style="background: rgba(255, 255, 255, 0.1); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.2);">
            
            <!-- Left side - Email + AZZAM -->
            <div class="w-full md:w-[80%] flex flex-col justify-center items-start h-full">
                <!-- Email button on top -->
                <div class="w-full mb-8 md:mb-12">
                    <p class="text-white/60 mb-4 text-base md:text-lg">Get in touch with me</p>
                    <button class="w-full md:w-fit px-16 py-4 rounded-full text-base md:text-lg font-medium" 
                            style="background: rgba(255, 255, 255, 0.9); color: #100c08; transition: all 0.3s ease;"
                            onmouseover="this.style.background='rgba(255, 255, 255, 1)'; this.style.transform='scale(1.02)'"
                            onmouseout="this.style.background='rgba(255, 255, 255, 0.9)'; this.style.transform='scale(1)'">
                        Email
                    </button>
                </div>
                <div class="block  w-full h-px bg-white/30 my-8"></div>

                <!-- AZZAM huge text -->
                <div class="w-full md:w-3/4">
                    <h2 class="font-serif font-bold leading-none text-[24vh]" >AZZAM</h2>
                </div>
            </div>
            
            <!-- Vertical divider (hidden on mobile) -->
            <div class="hidden md:block h-3/4 w-px bg-white/30"></div>
            
            <!-- Horizontal divider (visible on mobile) -->
            <div class="block md:hidden w-3/4 h-px bg-white/30 my-8"></div>
            
            <!-- Right side - Links -->
            <div class="w-full md:w-1/2 flex flex-col items-end md:pl-16 gap-3 md:gap-4">
                <a href="https://github.com/m-azzam-azis" target="_blank" class="text-white/70 text-base md:text-lg" 
                   style="transition: all 0.3s ease;"
                   onmouseover="this.style.color='rgba(255, 255, 255, 1)'; this.style.transform='translateX(5px)'"
                   onmouseout="this.style.color='rgba(255, 255, 255, 0.7)'; this.style.transform='translateX(0)'">
                    GitHub
                </a>
                <a href="https://linkedin.com/in/m-azzam-azis" target="_blank" class="text-white/70 text-base md:text-lg"
                   style="transition: all 0.3s ease;"
                   onmouseover="this.style.color='rgba(255, 255, 255, 1)'; this.style.transform='translateX(5px)'"
                   onmouseout="this.style.color='rgba(255, 255, 255, 0.7)'; this.style.transform='translateX(0)'">
                    LinkedIn
                </a>
                <a href="https://www.instagram.com/m.azzam.azis/" target="_blank" class="text-white/70 text-base md:text-lg"
                   style="transition: all 0.3s ease;"
                   onmouseover="this.style.color='rgba(255, 255, 255, 1)'; this.style.transform='translateX(5px)'"
                   onmouseout="this.style.color='rgba(255, 255, 255, 0.7)'; this.style.transform='translateX(0)'">
                    Instagram
                </a>
            </div>
        </footer>
    </div>


</Layout>
